<ol class="breadcrumb-ordered-list breadcrumb">
  {{#each breadcrumbs as |breadcrumb|}}
    <li class="breadcrumb-item">
      {{#if @last}}
        {{breadcrumb.name}}
      {{else}}
        <a href="{{breadcrumb._links.self.href}}" title="{{breadcrumb.name}}">{{breadcrumb.name}}</a>
      {{/if}}
    </li>
  {{/each}}
</ol>
