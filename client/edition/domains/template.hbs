{{#partial "content"}}
<div class="container" role="main">
  <div class="row">
    <div class="col-xs-12">
      <div class="panel panel-success">
        <div class="panel-heading">
          Available domains
        </div>

        <div class="panel-body">
          <div class="table-responsive">
            <table class="table table-striped table-hover table-condensed">
              <thead>
                <tr>
                  <th class="col-xs-2"></th>
                  <th class="col-xs-10">Name</th>
                </tr>
              </thead>
              <tbody>
                {{#each _embedded.domains}}
                  <tr>
                    <td class="warpjs-actions">
                      {{!--
                      <a href="{{_links.self.href}}"
                        ><span class="glyphicon glyphicon-info-sign warpjs-action"></span></a>
                      --}}
                      <a href="{{_links.domainTypes.href}}"
                        title="{{_links.domainTypes.title}}"
                        ><span class="glyphicon glyphicon-list warpjs-action"></span></a>
                      {{#if _links.studio.href}}
                        <a href="{{_links.studio.href}}"
                          title="{{_links.studio.title}}"
                          ><span class="glyphicon glyphicon-pencil warpjs-action"></span></a>
                      {{/if}}
                      {{#if _links.export.href}}
                        <a href="{{_links.export.href}}"
                          title="{{_links.export.title}}"
                          ><span class="glyphicon glyphicon-export warpjs-action"></span></a>
                      {{/if}}
                    </td>

                    <td>
                      <a href="{{_links.label.href}}" title="{{_links.label.title}}"
                        >{{name}}</a>
                      {{#if isDefaultDomain}}<span title="Default Domain">*</span>{{/if}}
                    </td>
                  </tr>
                {{/each}}
              </tbody>
            </table>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
{{/partial}}

{{> page-content}}
