<div class="row">
  <div class="col-xs-2 text-right">
    {{#if user._links.thumbnail.href}}
      <img class="img-circle" src="{{user._links.thumbnail.href}}" alt="{{user.name}}" />
    {{/if}}
  </div>

  <div class="col-xs-10">
    <span class="warpjs-change-log-by">
      <span class="warpjs-change-log-by-label">By</span>
      <span class="warpjs-change-log-by-value">
        {{#if user._links.self.href}}
          <a href="{{user._links.self.href}}">{{user.name}}</a>
        {{else}}
          {{user.name}}
        {{/if}}
      </span>
    </span>
    -
    <span class="warpjs-change-log-date">
      <span class="warpjs-change-log-date-value" title="{{momentLongFormat timestamp}}"
          data-warpjs-timestamp="{{timestamp}}"></span>
    </span>

    <br>

    <span class="warpjs-change-log-action">{{action}}</span>

    {{#if element}}
      <span class="warpjs-change-log-element">
        [
        <span class="warpjs-change-log-element-value"
            {{#if element.help}}title="{{element.help}}"{{/if}}
            >{{element.label}}</span>

        {{#if value}}
          :
          {{#if value.href}}
            <a href="{{value.href}}">{{value.label}}</a>
          {{else}}
            {{value.label}}
          {{/if}}
        {{/if}}

        ]
      </span>
    {{/if}}

    {{#if fromTo}}
      <br>
      <span class="warpjs-change-log-fromTo-from-label">from</span>
      <span class="warpjs-change-log-fromTo-from-value"
          {{#if fromTo.fromHelp}}title="{{fromTo.fromHelp}}"{{/if}}
          ><code class="{{fromTo.fromClass}}">{{fromTo.fromValue}}</code></span>
      <br>
      <span class="warpjs-change-log-fromTo-to-label">to</span>
      <span class="warpjs-change-log-fromTo-to-value"
          {{#if fromTo.toHelp}}title="{{fromTo.toHelp}}"{{/if}}
            ><code class="{{fromTo.toClass}}">{{fromTo.toValue}}</code></span>
    {{else if from}}
      <span class="warpjs-change-log-from-label">from parent</span>
      <span class="warpjs-change-log-from-value">
        <a href="{{from.href}}">{{from.label}}</a>
      </span>
    {{/if}}

  </div>
</div>
