{{#if user}}
    Hi {{username}}
{{^}}
    <form class="form-horizontal" role="form">
        <div class="form-group">
            <div class="col-md-5">
                <input type="email" id="i3c-login-email"
                    class="form-control"
                    placeholder="email"
                    />
            </div>
            <div class="col-md-5">
                <input type="password" id="i3c-login-password"
                    class="form-control"
                    placeholder="password"
                    />
            </div>
            <div class="col-md-1">
                <button type="submit" class="btn btn-default">
                    <span class="glyphicon glyphicon-ok" />
                </button>
            </div>
        </div>
    </form>
{{/if}}

