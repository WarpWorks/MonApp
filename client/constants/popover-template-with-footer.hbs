<div class="popover" role="tooltip">
  <div class="arrow"></div>
  <h3 class="popover-title"></h3>
  <div class="popover-content"></div>
  <div class="popover-footer">
    <div class="btn-group" role="group">
      {{#if okLabel}}
      <button type="button"
        class="btn btn-sm {{#if okClass}}{{okClass}}{{else}}btn-primary{{/if}}"
        data-warpjs-action="ok">{{okLabel}}</button>
      {{/if}}
      {{#if cancelLabel}}
      <button type="button"
        class="btn btn-sm {{#if cancelClass}}{{cancelClass}}{{else}}btn-default{{/if}}"
        data-warpjs-action="cancel">{{cancelLabel}}</button>
      {{/if}}
    </div>
  </div>
</div>
