<div class="row warpjs-modal-global-menu">
  <div class="warpjs-modal-title">EDIT</div>
  <div class="warpjs-modal-top-menu">
    <span class="dropdown">
      <span class="dropdown-toggle"
        id="warpjs-inline-edit-modal-language"
        data-toggle="dropdown"
        aria-haspopup="true"
        aria-expanded="true"
        data-warpjs-action="inline-edit-language"
        ><span class="text">English</span> <span class="caret"></span></span>
      <ul class="dropdown-menu" aria-labelledby="warpjs-inline-edit-modal-language">
        <li data-warpjs-action="inline-edit-language-change">Chinese</li>
        <li data-warpjs-action="inline-edit-language-change">English</li>
        <li data-warpjs-action="inline-edit-language-change">German</li>
      </ul>
    </span>
    <button type="button" class="inline-close" data-dismiss="modal" arial-label="Close" aria-hidden="true">Done</button>
  </div>
</div>
<div class="row">
  <div class="col-xs-12 warpjs-detail-content">
    <div class="form-group">
      <label for="warpjs-inline-edit-content">Content</label>
      <textarea class="form-control" id="warpjs-inline-edit-content" rows="12"
          data-warpjs-id="{{item.id}}"
          data-warpjs-field="Content"
          data-warpjs-reference-type="BasicProperty"
          data-warpjs-reference-id="{{item.id}}"
          data-warpjs-reference-name="{{item.name}}"
          readonly
        >{{item.value}}</textarea>
    </div>
  </div>
</div>
