<div class="row">
    {{#if _embedded.Images.length}}
    <div class="col-md-2">
            {{#each _embedded.Images}}
                <figure class="pull-left">
                    <img class="preview-img-responsive"
                        src="{{ImageURL}}"
                        alt="{{AltText}}"
                        />
                </figure>
            {{/each}}
    </div>
    <div class="col-md-10">
    {{else}}
    <div class="col-md-12">
    {{/if}}
        <div class="preview-heading">
            <a href="{{self.href}}">{{#if Heading}}{{Heading}}{{else}}{{name}}{{/if}}</a>
        </div>
        {{#if Content}}
             <div class="preview-content">
                <span>{{{Content}}}</span>
            </div>
        {{/if}}
    </div>
</div>
