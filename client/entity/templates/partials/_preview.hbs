<div class="row">
    {{#if _embedded.Images.length}}
    <div class="col-md-2">
            {{#each _embedded.Images}}
                {{#if ImageURL}}
                    <figure class="pull-left">
                        <img class="preview-img-responsive"
                            src="{{ImageURL}}"
                            alt="{{AltText}}"
                            />
                    </figure>
                {{/if}}
            {{/each}}
    </div>
    <div class="col-md-10">
    {{else}}
    <div class="col-md-12">
    {{/if}}
        <div class="panel-item-body-heading">
            {{#if Heading}}{{Heading}}{{else}}{{name}}{{/if}}
        </div>
        {{#if Content}}
            <div class="preview-content">{{{Content}}}</div>
        {{/if}}
        <div class="preview-see-more" title="{{#if Heading}}{{Heading}}{{else}}{{name}}{{/if}}">
            <a href="{{self.href}}">
                <span class="glyphicon glyphicon-arrow-right" />
                More
            </a>
        </div>
    </div>
</div>
