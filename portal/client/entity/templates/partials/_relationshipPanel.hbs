{{#if (isCsvRelationship)}}
    <div class="csv-container">
        <li class="csv-list-item">
            <span class="list-item-label" title="{{entity.desc}}">{{entity.label}}:</span>&nbsp;
            <span class="list-item-value">
                {{#each entity._embedded.relationships}}
                    {{#each this._embedded.references}}
                        {{> ./_csv this}}
                    {{/each}}
                {{/each}}
            </span>
        </li>
    </div>
{{/if}}

{{#if (isPreviewRelationship)}}
    {{#each entity._embedded.relationships}}
        {{#each this._embedded.references}}
                {{#if this._embedded}}
                    {{#each this._embedded.overviews}}
                        {{> ./_preview this self=../_links.self name=../name}}
                    {{/each}}
                {{else}}
                    {{> ./_preview this Heading=this.name Content=this.desc self=_links.self}}
                {{/if}}
        {{/each}}
    {{/each}}
{{/if}}
