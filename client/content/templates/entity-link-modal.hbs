<!--
    Modal for creating links to entities to put in content text
-->
<div class="container">
    <div class="modal fade" id="link-selection-modal" role="dialog">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Link Editor</h5>
                    <button type="button" class="link-selection-close close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <div class="row">
                        <div class="col-md-10 col-md-offset-1">
                            <ul class="list-group">
                                <li class="list-group-item">
                                    <form class="form-inline">
                                        Select type:
                                        <div class="form-group">
                                            <select class="form-control" id="link-selection-modal-selector">
                                            </select>
                                        </div>
                                    </form>
                                </li>
                                <li id="link-selection-modal-table" class="list-group-item" ></li>
                                <li class="list-group-item" id="link-selection-modal-links">
                                    Selection List:
                                    <ul class="link-selection-added-links list-group"></ul>
                                </li>
                            </ul>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button id="link-selection-add" type="button" class="btn btn-primary">Add Links</button>
                    <button type="button" class="link-selection-close btn btn-secondary" data-dismiss="modal">Close</button>
                </div>
            </div>
        </div>
    </div>
</div>

