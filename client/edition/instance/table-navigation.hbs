<form class="form-inline table-pagination">
  <div class="form-group table-pagination"
       data-pagination-page-start="{{relationship.pageStart}}"
       data-pagination-total="{{relationship.totalSize}}"
       >
    <div class="input-group">
      <div class="input-group-addon">
        {{> ../templates/chevron this direction="left" pageLimit=relationship.pageStart action="paginate-table" url=relationship._links.previousPage.href}}
      </div>
      <div class="input-group-addon">
        <span class="table-pagination-page-start">{{relationship.pageStart}}</span>
        -
        <span class="table-pagination-page-end">{{relationship.pageEnd}}</span>
        /
        <span class="table-pagination-total-size">{{relationship.totalSize}}</span>
      </div>
      <div class="input-group-addon">
        {{> ../templates/chevron this direction="right" pageLimit=relationship.totalSize action="paginate-table" url=relationship._links.nextPage.href}}
      </div>
      <div class="input-group-addon">
        {{#each subEntities as |subEntity|}}
          <span style="display:none;"
            data-warpjs-sub-entity="true"
            data-warpjs-sub-entity-id="{{subEntity.id}}"
            data-warpjs-sub-entity-name="{{subEntity.name}}"
            data-warpjs-sub-entity-label="{{subEntity.label}}"
            ></span>
        {{/each}}

        <span class="glyphicon glyphicon-plus-sign"
          data-warpjs-action="add-child"
          data-warpjs-url="{{addUrl}}"
          {{#unless canEdit}}disabled{{/unless}}
          ></span>
      </div>
    </div>
  </div>
</form>
