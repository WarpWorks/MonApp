{{#each pageView._embedded.mainBodyPanels as |panel|}}
  {{#if panel.showPanel}}
    <div class="row warpjs-panel">
      {{> ../left-right-margin}}

      <div class="col-xs-10">
        {{> page-view-panel panel=panel}}
      </div>

      {{> ../left-right-margin}}
    </div>
  {{/if}}
{{/each}}

{{#each pageView._embedded.communities as |community|}}
  {{#if community.show}}
    <div class="row warpjs-panel">
        {{> ../left-right-margin}}
        <div class="col-xs-10">
          <div class="panel panel-item panel-default warpjs-panel-style-{{panel.style}}">
            <div class="panel-heading panel-item-heading">
              <div class="panel-title">{{panel.label}}</div>
            </div>
            <div class="panel-body panel-item-body">
              {{> page-view-main-body panels=pageView._embedded.mainBodyPanels}}
              {{> page-view-community communities=pageView._embedded.communities}}
            </div>
          </div>
        </div>
        {{> ../left-right-margin}}
    </div>
  {{/if}}
{{/each}}

