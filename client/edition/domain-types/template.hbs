{{#partial "content"}}
  <div class="container" role="main">
    <div class="row">
      <div class="col-xs-12">
        <div class="panel panel-success warpjs-filter-box-container">
          <div class="panel-heading">
            Available entity types for
            <a href="{{_links.domain.href}}">{{_links.domain.title}}</a>
            :

            <div class="pull-right">
              {{>warpjs-filter-box-template placeholder="Filter list of entities"}}
            </div>
          </div>

          <div class="panel-body">
            <div class="table-responsive">
              <table class="table table-striped table-hover table-condensed">
                <thead>
                  <tr>
                    <th class="col-xs-2"></th>
                    <th class="col-xs-10">Name</th>
                  </tr>
                </thead>
                <tbody>
                  {{#each _embedded.entities}}
                    <tr class="warpjs-filter-box-item">
                      <td class="warpjs-actions">
                        {{!--
                        <a href="{{_links.self.href}}"
                          ><span class="glyphicon glyphicon-info-sign warpjs-action"></span></a>
                        --}}

                        {{#if _links.instances}}
                          <a href="{{_links.instances.href}}"
                            title="{{_links.instances.title}}"
                            ><span class="glyphicon glyphicon-list warpjs-action"></span></a>
                        {{/if}}

                        {{#if _links.studio}}
                          <a href="{{_links.studio.href}}"
                              title="{{_links.studio.title}}"
                              ><span class="glyphicon glyphicon-wrench warpjs-action"></span></a>
                        {{else if _links.content}}
                          <a href="{{_links.content.href}}"
                            title="{{_links.content.title}}"
                            ><span class="glyphicon glyphicon-book warpjs-action"></span></a>
                        {{/if}}
                      </td>
                      <td>
                        <a href="{{_links.label.href}}" title="{{_links.label.title}}">{{type}}</a>
                        {{#if isDefault}}<span title="Default Entity Type" class="warpjs-super glyphicon glyphicon-star"></span>{{/if}}
                      </td>
                    </tr>
                  {{/each}}
                </tbody>
              </table>
            </div>
          </div>
        </div>

      </div>
    </div>

  </div>
{{/partial}}

{{> page-content}}
