<h1>{{Heading}}</h1>

<div class="row">
    <div class="col-xs-0 col-md-1" />
    <div class="col-xs-12 col-md-10">
{{#if _embedded.Images}}
    {{#each _embedded.Images}}
        <figure class="pull-left">
            <img class="img-responsive"
                src="{{ImageURL}}"
                width="{{Width}}" height="{{Height}}"
                alt="{{AltText}}" align="left"
                {{#if _embedded.Maps}}
                usemap="#overview-map-{{@index}}"
                {{/if}}
                />
            <figcaption>{{Caption}}</figcaption>
            {{#if _embedded.Maps}}
            <map name="overview-map-{{@index}}">
                {{#each _embedded.Maps}}
                    <area shape="{{Shape}}" coords="{{Coords}}"
                    href="{{_links.target.href}}" alt="{{Alt}}" title="{{Title}}"
                    />
                {{/each}}
            </map>
            {{/if}}
        </figure>
    {{/each}}
{{/if}}

<p>{{Content}}</p>
    </div>
    <div class="col-xs-0 col-md-1" />
</div>
