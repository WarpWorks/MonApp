<div class="modal fade" role="dialog" tabindex="-1" aria-hidden="true"
  data-warpjs-modal="{{MODAL_NAME}}"
  >

  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-body">
        <div class="row">
          <div class="col-sm-4 warpjs-list-container">
            <div class="row warpjs-document-name">
              <div class="col-xs-12">
                <div class="warpjs-label">Document Name</div>
                <div class="warpjs-content"></div>
              </div>
            </div>

            <div class="row warpjs-document-elements">
              <div class="col-xs-12">
                <div class="warpjs-label">Document elements</div>
                <div class="warpjs-content"></div>
              </div>
            </div>

            <div class="row warpjs-document-filters">
              <div class="col-xs-12">
                TODO: PUT FILTER HERE.
              </div>
            </div>
          </div>

          <div class="col-sm-8 warpjs-detail-container">
            <div class="row">
              <div class="col-xs-4 warpjs-modal-title">I3C INLINE EDITOR</div>
              <div class="col-xs-8 warpjs-modal-top-menu">
                <span class="warpjs-modal-language">English</span>
                <span class="warpjs-modal-delete">Delete</span>
                <span class="warpjs-modal-history">History</span>
                <span class="warpjs-modal-advanced-edit" data-warpjs-url="{{EDIT_URL}}">Advanced edit</span>
                <button type="button" class="close" data-dismiss="modal" arial-label="Close" aria-hidden="true">&times;</button>
              </div>
            </div>

            <div class="row">
              <div class="col-xs-12 warpjs-navigation-menu">
                <span class="navigation-double-left">&lt;&lt;</span>
                <span class="navigation-single-left">&lt;</span>
                <span class="navigation-position">Position 1</span>
                <span class="navigation-single-right">&gt;</span>
                <span class="navigation-double-right">&gt;&gt;</span>

                <span class="navigation-visible-on-web">Visible on Web</span>
              </div>
            </div>

            <div class="warpjs-placeholder">
              &lt;--- Select an item to edit.
            </div>

          </div>
        </div>
      </div>
    </div>
  </div>

</div>
