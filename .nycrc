{
  "all": true,
  "report-dir": "./reports/coverage",
  "check-coverage": false,
  "exclude": [
    "**/*.*.test.js",
    "Gruntfile.js",
    "grunt/**/*.js",
    "public/3rd-party",
    "public/app",
    "public/libs",
    "reports",
    "server.js",
    "studio"
  ],
  "reporter": [
    "cobertura",
    "html",
    "text",
    "text-summary"
  ],
  "watermarks": {
    "statements": [50, 80],
    "lines": [50, 80],
    "functions": [50, 80],
    "branches": [50, 80]
  }
}
